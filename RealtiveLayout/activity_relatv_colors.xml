<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelatvColors">

   <TextView
       android:id="@+id/zoneColore"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:text="Couleur"
       android:layout_centerInParent="true"
       android:gravity="left"
       android:layout_margin="20dp"></TextView>
    <Button
        android:id="@+id/btnR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROUGE"
        android:background="@color/red"
        android:layout_above="@id/zoneColore"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black">
    </Button>
    <Button
        android:id="@+id/btnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLEU"
        android:background="@color/blue"
        android:layout_toLeftOf="@id/zoneColore"
        android:layout_centerVertical="true"
        android:textColor="@color/black"></Button>
    <Button
        android:id="@+id/btnJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAUNE"
        android:background="@color/jaune"
        android:layout_below="@id/zoneColore"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"></Button>
    <Button
        android:id="@+id/btnV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VERT"
        android:background="@color/vert"
        android:layout_toRightOf="@id/zoneColore"
        android:layout_centerVertical="true"
        android:textColor="@color/black"></Button>
</RelativeLayout>