<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelatvColors">

    <TextView
        android:id="@+id/zoneColore"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Couleur"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROUGE"
        android:background="@color/red"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/zoneColore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLEU"
        android:background="@color/blue"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/zoneColore"
        app:layout_constraintTop_toTopOf="@id/zoneColore"
        app:layout_constraintBottom_toBottomOf="@id/zoneColore" />

    <Button
        android:id="@+id/btnJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAUNE"
        android:background="@color/jaune"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/zoneColore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VERT"
        android:background="@color/vert"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/zoneColore"
        app:layout_constraintTop_toTopOf="@id/zoneColore"
        app:layout_constraintBottom_toBottomOf="@id/zoneColore" />

</androidx.constraintlayout.widget.ConstraintLayout>